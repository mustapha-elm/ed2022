                        <img class="card-img-top img-fluid" src={{ asset('assets/img/hdmi300.jpg') }} alt="..." />
                        <!-- Product details-->
                        <div class="card-body p-4 pt-2">
                                <h6 class="card-subtitle mb-2 text-muted text-center">ACCESSOIRES</h6>
                                <!-- Product name-->
                                <h5 class="text-uppercase card-title text-center">Cable usb type-c</h5>
