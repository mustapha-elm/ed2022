<section id="products">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            <div class="col mb-5">
                <div class="card h-100">
                    <a href="#">
                        <!-- Sale badge-->
                        <div class="badge bg-dark text-my-yellow position-absolute" style="top: 0.5rem; right: 0.5rem">Neuf</div>
